<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WordPressPlugins</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="/Content/card.css">
    <link rel="stylesheet" href="/Content/addstyle.css">
    <link rel="stylesheet" href="/Content/font-awesome.css">
</head>
<body>

            <div class="bs-component">
                <div class="navbar navbar-inverse navbar-fixed-top" style="padding-right: 20px; padding-left: 5px">
                    <div class="container">
                        
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Главная", "Index", "Home")</li>
                                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Администрирование<b class="caret"></b></a>
                                        <ul class="dropdown-menu">
                                            <li>@Html.ActionLink("Заказы", "Index", "Orders")</li>
                                            <li>@Html.ActionLink("Типы", "Index", "Catagories")</li>
                                            <li>@Html.ActionLink("Пользователи", "Index", "UsersAdmin")</li>
                                        </ul>
                                    </li>
                                }
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Каталог<b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Все", "Index", "Items")</li>
                                        <li class="divider"></li>
                                        <li>@Html.ActionLink("Аналитика", "Index", "Items", new { searchString = "Аналитика" }, null)</li>
                                        <li class="divider"></li>
                                        <li>@Html.ActionLink("Оптимизация", "Index", "Items", new { searchString = "Оптимизация" }, null)</li>
                                        <li class="divider"></li>
                                        <li>@Html.ActionLink("Торговля", "Index", "Items", new { searchString = "Торговля" }, null)</li>
                                        <li class="divider"></li>
                                        <li>@Html.ActionLink("Безопасность", "Index", "Items", new { searchString = "Безопасность" }, null)</li>
                                        <li class="divider"></li>
                                        <li>@Html.ActionLink("Миниатюры", "Index", "Items", new { searchString = "Миниатюры" }, null)</li>
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">О нас <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Публичная информация", "About", "Home")</li>
                                        <li class="divider"></li>
                                        <li>@Html.ActionLink("Контакты", "Contact", "Home")</li>
                                    </ul>
                                </li>
                            </ul>
                            @Html.Partial("_LoginPartial")

                        </div>
                    </div>
                    </div>
                </div>

                <div class="container body-content">
                    @RenderBody()
                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year - WordPressPlugins</p>
                    </footer>
                </div>

                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/bootstrap")
                @RenderSection("scripts", required: false)
</body>
</html>
