
@{
    ViewBag.Title = "Изменить статус";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<style>
    .checkbox {
        font-size: 14px;
    }
</style>
<h2>Изменить статус</h2>
@using (Html.BeginForm("ChangeStatus", "Orders", new { id = ViewBag.id }, FormMethod.Post, new { role = "form" }))
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-2 control-label">
                Статус:
            </div>
            <div class="col-md-10">
                @Html.DropDownList("status", new SelectList(new string[] { "Не оплачен", "Оплачен", "Отправлен", "Получен" }), htmlAttributes: new {@style="padding: 7px" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<br>
@Html.ActionLink("Назад к списку", "Index")
